<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootNode" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aspguidp.controller.output.SolverMessageController">
   <children>
      <Separator prefWidth="200.0">
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
         <VBox.margin>
            <Insets left="-20.0" right="-20.0" />
         </VBox.margin>
      </Separator>
      <VBox>
         <children>
            <Label text="Solver Output">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextArea fx:id="solverMessageArea" editable="false" focusTraversable="false" minHeight="-Infinity" minWidth="-Infinity" prefColumnCount="0" prefRowCount="0" wrapText="true">
               <styleClass>
                  <String fx:value="console-output" />
                  <String fx:value="solver-message" />
               </styleClass></TextArea>
         </children>
      </VBox>
   </children>
</VBox>
